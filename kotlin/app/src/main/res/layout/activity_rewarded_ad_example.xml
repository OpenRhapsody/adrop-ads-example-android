<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RewardedAdExampleActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RewardedAd Example"
            android:textSize="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="12dp"
    />

    <Button
            android:id="@+id/load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Load RewardedAd"
            android:layout_margin="12dp"
    />

    <Button
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/load"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Show RewardedAd"
            android:layout_margin="12dp"
            android:enabled="false"
    />

    <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/show"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="reset RewardedAd! (test ad)"
            android:layout_margin="12dp"
            android:enabled="false"
    />

    <TextView
            android:id="@+id/reset_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reset RewardedAd, you can be received ad successfully when click load button"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="6dp"
    />

    <Button
            android:id="@+id/reset_invalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reset_description"
            app:layout_constraintStart_toStartOf="parent"
            android:text="reset RewardedAd! (empty ad)"
            android:layout_margin="12dp"
            android:enabled="false"
    />

    <TextView
            android:id="@+id/load_invalid_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reset RewardedAd, you can be received ad successfully when click load button"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/reset_invalid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="6dp"
    />

    <TextView
            android:id="@+id/rewarded_error_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/load_invalid_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"
    />

    <TextView
            android:id="@+id/rewarded_error_code_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/rewarded_error_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
