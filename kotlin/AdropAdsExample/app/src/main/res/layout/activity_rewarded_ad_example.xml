<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardedAdExampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보상형 광고 (Rewarded Video)"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="광고를 끝까지 시청하면 보상을 받을 수 있습니다"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/reward_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 보유 코인: 0"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/purple_200"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/show_rewarded"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="🎁 보상형 광고 시청하기\n(코인을 받으세요!)"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/show_invalid"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="잘못된 유닛 ID (오류 테스트)"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_red_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 보상형 광고는 사용자가 명시적으로 선택했을 때만 표시하세요\n• 광고를 끝까지 시청한 경우에만 보상이 지급됩니다\n• 중간에 건너뛰거나 닫을 경우 보상이 지급되지 않습니다\n• 미리 로드하여 즉시 표시할 수 있습니다"
            android:textSize="12sp"
            android:padding="12dp"
            android:background="@android:color/background_light"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/ad_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보상형 광고 정보가 여기에 표시됩니다"
            android:textAlignment="center"
            android:padding="8dp"
            android:background="@android:color/background_light"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/rewarded_error_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/rewarded_error_code_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"/>

    </LinearLayout>
</ScrollView>