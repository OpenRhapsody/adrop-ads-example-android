<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NativeExampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/background_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="네이티브 광고 (동영상 포함)"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/load_native"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="일반\n네이티브"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@android:color/holo_green_light"/>

            <Button
                android:id="@+id/load_native_video_16_9"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="동영상\n16:9"
                android:textSize="12sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@android:color/holo_green_dark"/>

            <Button
                android:id="@+id/load_native_video_9_16"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="동영상\n9:16"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@android:color/holo_blue_dark"/>

        </LinearLayout>

        <Button
            android:id="@+id/reset_native"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="초기화 (광고 안나올 때 누르세요)"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/holo_red_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 네이티브 광고는 앱의 콘텐츠와 자연스럽게 융화됩니다\n• 동영상 네이티브 광고는 자동 재생됩니다\n• 광고가 안나오면 초기화 버튼을 눌러보세요"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="@android:color/white"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/ad_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="네이티브 광고 정보가 여기에 표시됩니다"
            android:textAlignment="center"
            android:padding="8dp"
            android:background="@android:color/background_light"
            android:textSize="12sp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"/>

</LinearLayout>