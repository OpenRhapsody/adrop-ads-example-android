<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopupExampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="팝업 광고 (다양한 사이즈)"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일반 팝업 광고"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/holo_orange_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/popup_bottom"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="하단 팝업"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <Button
                android:id="@+id/popup_center"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="중앙 팝업"
                android:layout_marginStart="4dp"
                android:backgroundTint="@android:color/holo_orange_dark"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동영상 팝업 광고 - 하단"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/popup_bottom_video_16_9"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="16:9\n(가로형)"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@android:color/holo_blue_light"/>

            <Button
                android:id="@+id/popup_bottom_video_9_16"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="9:16\n(세로형)"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@android:color/holo_blue_dark"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동영상 팝업 광고 - 중앙"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/holo_green_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/popup_center_video_16_9"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="16:9\n(가로형)"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@android:color/holo_green_light"/>

            <Button
                android:id="@+id/popup_center_video_9_16"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="9:16\n(세로형)"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@android:color/holo_green_dark"/>

        </LinearLayout>

        <Button
            android:id="@+id/reset_popup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="초기화 (광고 안나올 때 누르세요)"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/holo_red_light"/>

        <Button
            android:id="@+id/popup_invalid"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="잘못된 유닛 ID (오류 테스트)"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/holo_red_dark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 팝업 광고는 전체 화면을 덮어 표시됩니다\n• 사용자가 닫기 버튼이나 배경을 터치하여 닫을 수 있습니다\n• 동영상 광고는 자동 재생됩니다\n• 광고가 안나오면 초기화 버튼을 눌러보세요"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@android:color/background_light"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/ad_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="팝업 광고 정보가 여기에 표시됩니다"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@android:color/background_light"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/popup_error_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/popup_error_code_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"/>

    </LinearLayout>
</ScrollView>