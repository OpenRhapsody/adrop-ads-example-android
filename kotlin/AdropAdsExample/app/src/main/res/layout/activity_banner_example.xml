<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BannerExampleActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banner Example"
            android:textSize="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="12dp"
    />

    <Button
            android:id="@+id/load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="load banner! (test ad)"
            android:layout_margin="12dp"
    />

    <TextView
            android:id="@+id/load_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="load banner, you can be received ad successfully when click load button"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/load"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="6dp"
    />

    <Button
            android:id="@+id/load_carousel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/load_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="load banner! (carousel ad)"
            android:layout_margin="12dp"
            />

    <TextView
            android:id="@+id/load_carousel_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="load carousel banner, you can be received ad successfully when click load button"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/load_carousel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="6dp"
            />

    <Button
            android:id="@+id/load_invalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/load_carousel_description"
            app:layout_constraintStart_toStartOf="parent"
            android:text="load banner! (empty ad)"
            android:layout_margin="12dp"
    />

    <TextView
            android:id="@+id/load_invalid_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="load invalid banner, you can be received error code when click button"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/load_invalid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="6dp"
    />

    <TextView
            android:id="@+id/banner_error_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/load_invalid_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"
    />

    <TextView
            android:id="@+id/banner_error_code_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/banner_error_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <FrameLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
